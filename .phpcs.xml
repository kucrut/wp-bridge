<?xml version="1.0"?>
<ruleset name="semboya">
	<description>PHPCS rules for bridge</description>

	<!-- Use HM Coding Standards -->
	<rule ref="vendor/humanmade/coding-standards">
		<exclude name="HM.Files.NamespaceDirectoryName" />
		<!-- Altis uses PHP 7.2 or later, disregard PHP 7.1 warnings around "object" type. -->
		<exclude name="PHPCompatibility.FunctionDeclarations.NewParamTypeDeclarations.objectFound" />
		<exclude name="PHPCompatibility.FunctionDeclarations.NewReturnTypeDeclarations.objectFound" />
		<exclude name="PSR1.Files.SideEffects.FoundWithSymbols" />
	</rule>

	<arg name="extensions" value="php" />
</ruleset>
